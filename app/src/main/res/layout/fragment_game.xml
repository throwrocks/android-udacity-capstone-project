<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/game_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rocks.throw20.funwithcountries.GameActivity"
    tools:showIn="@layout/activity_game"
    >

    <TextView
        android:id="@+id/game_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/h1_text"
        />

    <TextView
        android:id="@+id/game_score"
        android:layout_below="@+id/game_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/body_text"
        />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/game_timer"
        android:layout_below="@id/game_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:donut_progress="1000"
        app:donut_prefix_text=""
        app:donut_suffix_text=""
        app:donut_max="10"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/question"
        android:layout_below="@id/game_timer"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/subheading_text"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/question_country"
        android:layout_below="@id/question"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/h1_text"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/choice1"
        android:layout_below="@+id/question_country"
        android:layout_height="wrap_content"
        android:layout_width="520dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/choice2"
        android:layout_below="@+id/choice1"
        android:layout_height="wrap_content"
        android:layout_width="520dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/choice3"
        android:layout_below="@+id/choice2"
        android:layout_height="wrap_content"
        android:layout_width="520dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/choice4"
        android:layout_below="@+id/choice3"
        android:layout_height="wrap_content"
        android:layout_width="520dp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/confirm_text"
        android:layout_below="@id/choice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_text"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/action_answer"
        android:layout_below="@+id/confirm_text"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableStart="@drawable/ic_done_black_24dp"
        android:drawableLeft="@drawable/ic_done_black_24dp"
        android:text="@string/action_submit"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/question_result"
        android:layout_below="@id/question_country"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/subheading_text"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/action_next_question"
        android:layout_below="@+id/question_result"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawableEnd="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:text="@string/action_next_question"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>